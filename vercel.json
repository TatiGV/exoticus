{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/app/dist/static/$1" },
    { "src": "/assets/(.*)", "dest": "/app/dist/assets/$1" },
    { "src": "/(.*)", "dest": "/app/dist/index.html" }
  ]
}